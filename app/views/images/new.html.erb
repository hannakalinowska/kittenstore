<h2>New image</h2>

<% if @image.errors.any? %>
  <% @image.errors.full_messages.each do |message| %>
    <div class="alert alert-danger"><%= message %></div>
  <% end %>
<% end %>

<%= form_for @image, :multipart => true do |f| %>
  <div class="form-group">
    <%= f.label :attachment, 'Choose an image' %>
    <%= f.file_field :attachment, :class => 'form-control' %>
  </div>

  <div class="form-group"><%= f.submit 'Upload', :class => 'btn' %></div>
<% end %>

<%= form_for @image do |f| %>
  <div class="form-group">
    <%= f.label :remote_url, 'or paste link' %>
    <%= f.text_field :remote_url, :class => 'form-control' %>
  </div>

  <div class="form-group"><%= f.submit 'Save', :class => 'btn' %></div>
<% end %>
